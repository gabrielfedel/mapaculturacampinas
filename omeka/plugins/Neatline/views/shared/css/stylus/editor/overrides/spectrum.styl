.sp-replacer
  box-sizing border-box
  border-radius 2px
  border-color $borderColor
  background white
  padding 6px
  width 100%

  &:hover
    border-color $borderColor

  .sp-preview
    width 10%

.sp-input-container
  margin 0

  .sp-input
    font 12px Courier !important;

.sp-replacer.sp-active
  border-color $borderColor

.sp-container
  border 1px solid $borderColor
  border-top none
  background #f4f4f4
